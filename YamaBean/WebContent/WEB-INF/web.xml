<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>YAMABEAN</display-name>
	<welcome-file-list>
		<welcome-file>/WEB-INF/views/index.jsp</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext/applicationContext.xml</param-value>
	</context-param>


	<!-- /////////////// 멤버 /////////////// -->
	<servlet>
		<servlet-name>Member</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/contextConfig/member-context.xml</param-value>
		</init-param>

	</servlet>

	<servlet-mapping>
		<servlet-name>Member</servlet-name>
		<url-pattern>/member/*</url-pattern>
	</servlet-mapping>


	<!-- /////////////// 게시판 /////////////// -->
	<servlet>
		<servlet-name>Board</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/contextConfig/board-context.xml</param-value>
		</init-param>

	</servlet>
	
	<servlet-mapping>
		<servlet-name>Board</servlet-name>
		<url-pattern>/board/*</url-pattern>
	</servlet-mapping>

	<!-- /////////////// 메뉴 /////////////// -->
	<servlet>
		<servlet-name>Menu</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/contextConfig/menu-context.xml</param-value>
		</init-param>

	</servlet>

	<servlet-mapping>
		<servlet-name>Menu</servlet-name>
		<url-pattern>/menu/*</url-pattern>
	</servlet-mapping>

	<!-- /////////////// 매장 /////////////// -->
	<servlet>
		<servlet-name>StoreMap</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/contextConfig/storeMap-context.xml</param-value>
		</init-param>

	</servlet>

	<servlet-mapping>
		<servlet-name>StoreMap</servlet-name>
		<url-pattern>/storeMap/*</url-pattern>
	</servlet-mapping>
	
	<!-- /////////////// 마이메뉴 /////////////// -->
	<servlet>
		<servlet-name>Mymenu</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/contextConfig/admin-context.xml</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Mymenu</servlet-name>
		<url-pattern>/mymenu/*</url-pattern>
	</servlet-mapping>
	
	<!-- /////////////// 관리자 /////////////// -->
	<servlet>
		<servlet-name>Admin</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/contextConfig/admin-context.xml</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Admin</servlet-name>
		<url-pattern>/admin/*</url-pattern>
	</servlet-mapping>
	
	<!-- /////////////// 주문 /////////////// -->
	<servlet>
		<servlet-name>Order</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/contextConfig/order-context.xml</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Order</servlet-name>
		<url-pattern>/order/*</url-pattern>
	</servlet-mapping>

	<!-- /////////////// 인코딩 /////////////// -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- /////////////// 에러페이지 /////////////// -->
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/views/common/error.jsp</location>
	</error-page>


</web-app>
